<html>
<head>
<title>파이 구하기</title>
</head>
<body><script>
document.write("PI Calculation by 이선진")</script>
<div style="width:80vw"><canvas id="myChart"></canvas></div>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
k = 0
nt = []  // i를 넣음
pt = []  // pi값을 넣음
c = []
for (i = 0; i <= 100000000; i ++){
  numX = Math.random()
  numY = Math.random()
  if (numX*numX + numY*numY < 1){
    k = k + 1
  }
  if (i == 100) padd(i, k)
  if (i == 1000) padd(i, k)
  if (i == 10000) padd(i, k)
  if (i == 100000) padd(i, k)
  if (i == 1000000) padd(i, k)
  if (i == 10000000) padd(i, k)
  if (i == 20000000) padd(i, k)
  if (i == 30000000) padd(i, k)
  if (i == 40000000) padd(i, k)
  if (i == 50000000) padd(i, k)
  if (i == 60000000) padd(i, k)
  if (i == 70000000) padd(i, k)
  if (i == 80000000) padd(i, k)
  if (i == 90000000) padd(i, k)
  if (i == 100000000) padd(i, k)
}

for (j = 0; j < 15; j++){
  c[j] = Math.PI
  }

function padd(t, k){
  alert(t + " : " + k + " : " + (4 * k / t))
  nt.push(t); pt.push(4 * k / t)
}


datainfo = {
  labels : nt,
  datasets : [{
    label : '계산한 값',
    backgroundColor : ['gray', 'red'],
    borderColor : 'blue',
    data : pt,
    tension : 0.5
   },
   {
   label : '실제 PI 값',
    backgroundColor : ['gray', 'red'],
    borderColor : 'red',
    data : c,
    tension : 0.5
   }]
}
const config = {
  type : 'line',
  data : datainfo
}
mychart = new Chart(document.getElementById("myChart"), config)


</script>
</body>
</html>
